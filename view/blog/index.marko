<lasso-page package-path="./browser.json"/>
//the <include/> and <@tag> tag is belong to marko
<include('../layout/template/index.marko', data)>
<@title>Blog</@title>
  <@content>
  <!--always need something in @content, or else will get "Error: write after end"  -->

<!-- Trigger the modal with a button -->
<!-- <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button> -->

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Attention!</h3>
      </div>
      <div class="modal-body">
        <p>The posts are my notes, and the info might not be 100% accurate.
        I also have collected information from different sources and included the
        links to the sources if they were collected from online sources. There are
        unfinished posts and post layouts in the list, so I can remember the info
        for later writing. If you interesting in any of the posts, and want to
        contribute or have any question, please send me an email through 'Contact'
        option in the menu bar for now. I will implement comment section to each
        post in the future.<br/><br/>Thank you for visiting!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-basic" data-dismiss="modal">Continue to the page</button>
      </div>
    </div>

  </div>
<!-- end of modal -->
</div>
  <div class="container">
  <div class="row">
    <div class="col-md-2 hidden-sm"></div>
    <div class="col-md-8">
      <h1>Blog</h1>
      <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal"><h4 class="meta">Posts that I've written.</h4></button>
      <ul id="ulBlog" style="list-style-type: none;">
        <for(var i=0; i<input.postId.length; i++)>
          <li><span class="col-md-3">${i}.&nbsp;&nbsp;&nbsp;&nbsp;${input.postDate[i]}</span> <span class="col-md-4"><a id="${input.postId[i]}" href="/post/${input.postId[i]}">${input.postName[i]}</a></span></li><br/><br/>
        </for>
      <!-- <li><span class="monospace">July 5, 2017</span> &raquo; <a href="/post/display">testing</a></li> -->
      </ul>
      <!-- <a class="btn btn-success btn-lg" href="/post/form">New Post</a><br/> -->
      <!-- <a class="btn btn-warning btn-sm" href="/login/newpost">New Post</a><br/> -->
      <a class="btn btn-warning btn-sm" href="/post-new-editor">New Post</a>
    </div>
  </div>
</div>


  </@content>
</include>
