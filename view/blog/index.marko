<lasso-page package-path="./browser.json"/>
//the <include/> and <@tag> tag is belong to marko
<include('../layout/template/index.marko', data)>
<@title>Blog</@title>
  <@content>
  <!--always need something in @content, or else will get "Error: write after end"  -->

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Attention!</h3>
      </div>
      <div class="modal-body">
        <p>The posts are my notes, and the info might not be 100% accurate.
        I also have collected information from different sources and included the
        links to the sources if they were collected from online sources. There are
        unfinished posts and post layouts in the list, so I can remember the info
        for later writing. If you interesting in any of the posts, and want to
        contribute or have any question, please send me an email through 'Contact'
        option in the menu bar for now. I will implement comment section to each
        post in the future.<br/><br/>Thank you for visiting!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-basic" data-dismiss="modal">Continue to the page</button>
      </div>
    </div>

  </div>
<!-- end of modal -->
</div>
  <div class="container reader-box">
  <div class="row">
    <div class="col-md-2 hidden-sm"></div>
    <div class="col-md-10">
      <h1>Blog</h1>
      <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal">
        <h4 class="meta">Posts that I've written.</h4>
      </button>
      <ul id="ulBlog" style="list-style-type: decimal;">
        <for(var i=0; i<input.postId.length; i++)>
          <li  style="border:1px solid white"> <!--without the border the decimal will go to the left-->
            <span class="col-md-2">${input.postDate[i]}</span>
            <span class="col-md-8">
              <a class="postClass" id="${input.postId[i]}" href="/post/${input.postId[i]}">
                ${input.postName[i]}
              </a>
            </span>
          </li><br/>
        </for>
      </ul>


    </div>
    <div class="row" style="text-align:center">
      <a class="btn btn-gphan" href="/post-new-editor">New Post</a>
    </div>
  </div>
</div>


  </@content>
</include>
